generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventStatus {
  PENDING
  APPROVED
  REJECTED
}

model Event {
  id          String      @id @default(uuid())
  name        String
  description String
  image       String
  eventStatus EventStatus
  startDate   DateTime
  endDate     DateTime
  turnsPerDay Int
  partnerId   String

  User_Join_Event User_Join_Event[]
  User_Like_Event User_Like_Event[]
}

model User_Join_Event {
  id      String @id @default(uuid())
  userId  String
  eventId String
  turn    Int

  Event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}

model User_Like_Event {
  id      String @id @default(uuid())
  userId  String
  eventId String

  Event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}

model StartInOneDay_Event {
  eventId          String   @id @default(uuid())
  notificationDate DateTime
}

model StartNow_Event {
  eventId          String   @id @default(uuid())
  notificationDate DateTime
}
